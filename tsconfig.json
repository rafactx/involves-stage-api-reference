{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "types": ["vitepress/client", "node"],
    
    // üóÇÔ∏è Base para aliases
    "baseUrl": "./docs/.vitepress",

    // üì¶ Alias para caminhos bonitos
    "paths": {
      "@/*": ["theme/*"]
    },

    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },

  "include": [
    "docs/.vitepress/**/*.ts",
    "docs/.vitepress/**/*.vue",
    "docs/.vitepress/env.d.ts"
  ]
}
